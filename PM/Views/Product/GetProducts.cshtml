@using PM.Models
@using PM.lib
@model SalesOrder
<table id="listing" class="table table-striped table-bordered bulk_action">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mã sản phẩm</th>
            <th>Tên Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá xuất</th>
            <th>Tổng tiền xuất</th>
            <th>Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Products != null && Model.Products.Any())
        {
            foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Product.ProductId</td>
                    <td>@item.Product.ProductCode</td>
                    <td>@item.Product.ProductName</td>
                    <th>@item.Quantity</th>
                    <td>@item.Price.ToCurrency()</td>
                    <td>@item.Total.ToCurrency()</td>
                    <td><a href="javascript:" onclick="DeleteCB(@item.Product.ProductId)" class="btn btn-danger btn-xs">Xoá</a></td>
                </tr>
            }
        }
    </tbody>
</table>
<h4 style="font-weight: 600;" class="text text-success">
    Tổng tiền đơn xuất:
</h4>
<h2 style="font-weight: 600;" class="text text-danger">@Model.Total.ToCurrency()</h2>