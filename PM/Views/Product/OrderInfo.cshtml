                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" name="" id="" class="form-control col-md-7 col-xs-12" value="" />
                                </div>*@
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">
                                Ghi chú
                            </label>
