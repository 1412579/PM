                                <input type="text" name="" disabled id="CustomerNote" class="form-control col-md-7 col-xs-12" value="@Model.Contact.Contents" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
