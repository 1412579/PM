@using PM.Models
@using PM.lib
@model List<ProductView>
@{
}

@section css{
    <link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
}

@section js{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $('#listing').dataTable();

    </script>
}

<div class="right_col" role="main" style="min-height: 3771px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sản phẩm</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách sản phẩm</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="listing" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th>ID WEB</th>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá bán lẻ</th>
                                    <th>Giá bán buôn</th>
                                    <th>Đơn vị</th>
                                    <th>Ngành hàng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        var pro = item.Product;
                                        <tr>
                                            <td>@pro.ProductId</td>
                                            <td>@pro.ProductCode</td>
                                            <td>@pro.ProductName</td>
                                            <td>@pro.Price.ToCurrency()</td>
                                            <td>@pro.SalePrice.ToCurrency()</td>
                                            <td>@(item.Unit != null ? item.Unit.UnitName : "Chưa chọn đơn vị")</td>
                                            <td>@(item.Category != null ? item.Category.CategoryName : "Chưa chọn ngành hàng")</td>
                                            <td><a asp-controller="Product" asp-action="AddEdit" asp-route-modelId="@pro.ProductId" class="btn btn-primary">Thông tin</a> <a asp-controller="Product" asp-action="Delete" asp-route-modelId="@pro.ProductId" class="btn btn-danger">Xoá</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
