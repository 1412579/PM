@using PM.Models
@model List<ProductCategory>
@{
}

@section css{
    <link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
}

@section js{
    <script src="~/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $('#listing').dataTable();
    </script>
}

<div class="right_col" role="main" style="min-height: 3771px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Ngành hàng</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách ngành hàng</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="listing" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên ngành hàng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CategoryId</td>
                                            <td>@item.CategoryName</td>
                                            <td><a asp-controller="Category" asp-action="AddEdit" asp-route-modelId="@item.CategoryId" class="btn btn-primary">Sửa</a> <a asp-controller="Category" asp-action="Delete" asp-route-modelId="@item.CategoryId" class="btn btn-danger">Xoá</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
